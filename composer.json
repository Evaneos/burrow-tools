{
    "name": "selrahcd/burrow-tools",
    "description": "Some tools making life easier with evaneos/Burrow",
    "license": "MIT",
   
    "require" : {
        "evaneos/burrow": "~2.0"
    },

    "require-dev" : {
        "phpunit/phpunit" : "~4.0",
        "mockery/mockery": "^0.9.4",
        "league/event": "^2.1"
    },

    "autoload": {
        "psr-4": {
            "Burrow\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Burrow\\tests\\": "tests/"
        }
    },

    "suggest": {
        "league/event": "Allows to deal with event within your application."
    }
}
